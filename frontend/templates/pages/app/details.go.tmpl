{{ define "details" }}
{{ template "app" . }}{{ end }}
{{ define "page" }}
<h1>Account Details</h1>

<form action="/accounts/{{ .Account.Id }}" method="post">
  <label>
    <span>Platform</span>
    <input type="text" name="platform" value="{{ .Account.Platform }}" />
  </label>

  <label>
    <span>Identifier</span>
    <input type="text" name="identifier" value="{{ .Account.Identifier }}" />
  </label>

  <label>
    <span>URL</span>
    <input type="text" name="url" value="{{ .Account.Url }}" />
  </label>

  <label>
    <span>Passphrase</span>
    <input type="password" name="passphrase" value="{{ .Account.Passphrase }}" />
  </label>

  <label>
    <span>Notes</span>
    <textarea name="notes">{{ .Account.Notes }}</textarea>
  </label>

  {{ if .Error }}
    <small>{{ .Error }}</small>
  {{ end }}

  <button type="submit">Save</button>
</form>

<h2>Danger Zone</h2>

<button type="button" onclick="deleteAccount()">Delete</button>
{{ end }}

{{ define "script" }}
<script>
  function deleteAccount() {
    if (confirm('Are you sure you want to delete this account?')) {
      fetch(`/api/accounts/{{ .Account.Id }}`, {
        method: 'DELETE',
        credentials: 'include',
      }).then(() => {
        window.location.href = '/';
      }).catch((error) => {
        const errorElement = document.createElement('small');
        errorElement.textContent = 'Failed to delete account';
        document.querySelector('form').appendChild(errorElement);
      });
    }
  }
</script>
{{ end }}