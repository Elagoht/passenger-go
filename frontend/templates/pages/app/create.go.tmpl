{{ define "details" }}
{{ template "app" . }}{{ end }}
{{ define "page" }}
<h1>New Account</h1>

<form action="/create" method="post">
  <label>
    <span>Platform</span>
    <input type="text" name="platform" value="{{ .Account.Platform }}" />
  </label>

  <label>
    <span>Identifier</span>
    <input type="text" name="identifier" value="{{ .Account.Identifier }}" />
  </label>

  <label>
    <span>URL</span>
    <input type="text" name="url" value="{{ .Account.Url }}" />
  </label>

  <label>
    <span>Passphrase</span>
    <input type="password" name="passphrase" value="{{ .Account.Passphrase }}" />
  </label>

  <label>
    <span>Notes</span>
    <textarea name="notes">{{ .Account.Notes }}</textarea>
  </label>

  {{ if .Error }}
    <small>{{ .Error }}</small>
  {{ end }}

  <button type="submit">Create</button>
</form>
{{ end }}