{{ define "base" }}
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="/static/favicon.ico" />
    <link rel="manifest" href="/static/manifest.json" />

    <title>{{ block "title" . }}Passenger Passphrase Manager{{ end }}</title>

    <link rel="stylesheet" href="/static/css/main.css" />
    {{ block "head" . }}{{ end }}
  </head>

  <body>
    <main>
      {{ block "content" . }}
      <div class="card">
        <h2>Welcome to Passenger</h2>

        <p>This is a default content block. Please override it in your page templates.</p>
      </div>
      {{ end }}
    </main>
  </body>
  {{ block "script" . }}{{ end }}
</html>
{{ end }}
